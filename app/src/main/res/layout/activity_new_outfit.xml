<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.NewOutfitActivity">

    <ImageView
        android:id="@+id/outfitImg"
        android:layout_width="match_parent"
        android:layout_height="221dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />


    <Spinner
        android:id="@+id/topSpinner"
        android:layout_width="204dp"
        android:layout_height="21dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toEndOf="@+id/topText"
        app:layout_constraintTop_toBottomOf="@+id/outfitImg" />

    <Spinner
        android:id="@+id/bottomSpinner"
        android:layout_width="206dp"
        android:layout_height="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toEndOf="@+id/bottomText"
        app:layout_constraintTop_toBottomOf="@+id/topSpinner" />


    <Spinner
        android:id="@+id/shoesSpinner"
        android:layout_width="206dp"
        android:layout_height="20dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toEndOf="@+id/shoesText"
        app:layout_constraintTop_toBottomOf="@+id/bottomSpinner" />

    <TextView
        android:id="@+id/topText"
        android:layout_width="61dp"
        android:layout_height="20dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="29dp"
        android:text="Top:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outfitImg" />

    <TextView
        android:id="@+id/bottomText"
        android:layout_width="58dp"
        android:layout_height="19dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="44dp"
        android:text="Bottom:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topText" />

    <TextView
        android:id="@+id/shoesText"
        android:layout_width="61dp"
        android:layout_height="20dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="44dp"
        android:text="Shoes:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottomText" />


    <Button
        android:id="@+id/addBtn"
        android:layout_width="195dp"
        android:layout_height="51dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:text="Add outfit to closet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/revealMoreBtn" />

    <Button
        android:id="@+id/revealMoreBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="16dp"
        android:text="tag more items to fit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shoesText" />
</androidx.constraintlayout.widget.ConstraintLayout>